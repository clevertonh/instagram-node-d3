body
  padding: 0px
  margin: 0px
  width: 100vw
  height: 100vh
  background-color: #001220

a
  color: #00B7FF

#search-form-div
  position: absolute
  top: 0
  left: 0
  font-family: 'Open Sans', sans-serif
  width: 100%
  height: 100%
  text-align: center
  background-color: white
  background-image:url('/images/map.png')
  background-repeat:no-repeat
  background-size:cover
  -webkit-transition: all 0.5s ease-in-out;
  -moz-transition: all 0.5s ease-in-out;
  -ms-transition: all 0.5s ease-in-out;
  -o-transition: all 0.5s ease-in-out;

.hidden
  -webkit-opacity: 0;
  -moz-opacity: 0;
  -o-opacity: 0;
  opacity: 0;

label
  vertical-align: middle
  font-size: 25px

input[type=text]
  color: #555
  padding: 0
  text-indent: 5px
  border: 1px solid #ccc
  box-shadow: inset 0 1px 1px rgba(0,0,0,.075)
  font-family: 'Open Sans', sans-serif
  -webkit-transition: all 0.30s ease-in-out;
  -moz-transition: all 0.30s ease-in-out;
  -ms-transition: all 0.30s ease-in-out;
  -o-transition: all 0.30s ease-in-out;

input[type=text]:focus
  border-color: #007bb6
  outline: 0
  box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(0, 123, 182, .6)

#search-form-div .hash-tag-input
  height: 40px
  width: 400px
  padding: 0
  font-size: 25px

#map-div .hash-tag-input
  height: 25px
  width: 180px
  font-size: 12px

button
  width: 120px
  height: 42px
  vertical-align: middle
  font-size: 25px
  font-family: 'Open Sans', sans-serif
  color: #fff
  background-color: #007bb6
  border-color: #517fa4
  border: 1px solid transparent
  cursor: pointer
  -webkit-transition: background-color 0.30s ease-in-out
  -moz-transition: background-color 0.30s ease-in-out
  -ms-transition: background-color 0.30s ease-in-out
  -o-transition: background-color 0.30s ease-in-out

button:hover
  background-color: #0072b1

#map-div button
  font-size: 12px
  height: 27px
  width: 30px
  background-color: #01405F

#map-div button:hover
  background-color: #002C41

.centered
  position: relative
  top: 40%

#map-div
  z-index: -1
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%

#corner-search-div
  position: absolute
  top: 0
  left: 0

#hash-tag-display
  position: absolute
  bottom: 0
  right: 0
  padding: 30px
  font-family: 'Open Sans', sans-serif
  font-size: 100px
  -webkit-transition: all 0.5s ease-in-out;
  -moz-transition: all 0.5s ease-in-out;
  -ms-transition: all 0.5s ease-in-out;
  -o-transition: all 0.5s ease-in-out;

#hash-tag-display p
  margin-bottom: 0px
  color: #d7d7d7
  font-size: 3rem

#posts-container
  position: absolute
  left: 1rem
  bottom: 1rem

#posts-container div
  width: 160px
  height: 160px
  background: #d7d7d7
  margin: 0
  padding: 0

#posts-container div img
  position: absolute
  border: 1px solid #d3d3d3
  left: 5px
  top: 5px

