body
  padding: 50px

a
  color: #00B7FF

#search-form-div
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  text-align: center
  background-color: white
  -webkit-transition: all 0.5s ease-in-out;
  -moz-transition: all 0.5s ease-in-out;
  -ms-transition: all 0.5s ease-in-out;
  -o-transition: all 0.5s ease-in-out;

.hidden
  -webkit-opacity: 0;
  -moz-opacity: 0;
  -o-opacity: 0;
  opacity: 0;

label
  font-family: 'Open Sans', sans-serif
  font-size: 25px

input[type=text]
  color: #555
  border: 1px solid #ccc
  border-radius: 4px
  box-shadow: inset 0 1px 1px rgba(0,0,0,.075)
  font-family: 'Open Sans', sans-serif
  -webkit-transition: all 0.30s ease-in-out;
  -moz-transition: all 0.30s ease-in-out;
  -ms-transition: all 0.30s ease-in-out;
  -o-transition: all 0.30s ease-in-out;

input[type=text]:focus
  border-color: #007bb6
  outline: 0
  box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(0, 123, 182, .6)

#search-form-div .hash-tag-input
  height: 40px
  width: 400px
  font-size: 25px

#map-div .hash-tag-input
  height: 25px
  width: 180px
  font-size: 12px
  border-radius: 6px 0px 0px 6px

button
  font-size: 25px
  font-family: 'Open Sans', sans-serif
  border-radius: 6px
  color: #fff
  background-color: #007bb6
  border-color: #517fa4
  border: 1px solid transparent
  cursor: pointer
  padding: 10px 16px
  width: 150px
  -webkit-transition: background-color 0.30s ease-in-out
  -moz-transition: background-color 0.30s ease-in-out
  -ms-transition: background-color 0.30s ease-in-out
  -o-transition: background-color 0.30s ease-in-out

button:hover
  background-color: #0072b1

#map-div button
  font-size: 12px
  border-radius: 0px 6px 6px 0px
  width: 30px
  padding: 5px

.centered
  position: relative
  top: 40%

#map-div
  z-index: -1
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%

#corner-search-div
  position: absolute
  top: 0
  left: 0

#posts-container
  position: absolute
  top: 3rem
  left: 0
  margin: 0
  padding: 0

